ARG BASE_NAME=
ARG IMAGE_TAG=
ARG IMAGE_ARCH=
ARG BASE_NAME_DEBUG=
ARG DOCKER_REGISTRY=torizon

FROM --platform=$IMAGE_ARCH ${DOCKER_REGISTRY}/${BASE_NAME_DEBUG}:${IMAGE_TAG} AS dotnet

FROM --platform=$IMAGE_ARCH ${DOCKER_REGISTRY}/${BASE_NAME}:${IMAGE_TAG} AS base

COPY --from=dotnet /vsdbg /vsdbg
