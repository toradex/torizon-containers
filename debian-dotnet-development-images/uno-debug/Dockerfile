ARG BASE_NAME
ARG DOTNET_BASE_IMAGE_TAG
ARG BASE_NAME_DEBUG
ARG DOCKER_REGISTRY=torizon

FROM ${DOCKER_REGISTRY}/torizon/${BASE_NAME_DEBUG}:${DOTNET_BASE_IMAGE_TAG} AS dotnet

FROM ${DOCKER_REGISTRY}/torizon/${BASE_NAME}:${DOTNET_BASE_IMAGE_TAG} AS base

COPY --from=dotnet /vsdbg /vsdbg
