ARG BASE_NAME
ARG DOTNET_BASE_IMAGE_TAG
ARG IMAGE_ARCH
ARG BASE_NAME_DEBUG
ARG DOCKER_REGISTRY=torizon

FROM --platform=${IMAGE_ARCH} ${DOCKER_REGISTRY}/${BASE_NAME_DEBUG}:${DOTNET_BASE_IMAGE_TAG} AS dotnet

FROM --platform=${IMAGE_ARCH} ${DOCKER_REGISTRY}/${BASE_NAME}:${DOTNET_BASE_IMAGE_TAG} AS base

COPY --from=dotnet /vsdbg /vsdbg
